<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >

    <LinearLayout
            android:id="@+id/fragment_place"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="60dp"
            >
    </LinearLayout>

    <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@drawable/ui_shape_solid_gray_light"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="3dp"
            android:weightSum="3">

        <LinearLayout
                android:id="@+id/babyLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                >

            <ImageView
                    android:id="@+id/babyIV"
                    style="@style/BottomTabButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baby_checked"
                    android:layout_gravity="center"
                    android:checked="false"/>
            <TextView
                    android:id="@+id/babyTV"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/mainBarText"
                    android:textColor="@color/bar_color_focus"
                      android:text="@string/main_bb"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/msgLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                    <ImageView
                            android:id="@+id/msgIV"
                            style="@style/BottomTabButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/msg_unckecked"
                            android:layout_gravity="center"
                            android:checked="true"/>
                    <TextView
                            android:id="@+id/msgTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/mainBarText"
                            android:text="@string/main_msg"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:paddingTop="6dp"
                        android:layout_marginLeft="60dp"
                        >
                    <FrameLayout
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            >
                        <com.bct.gpstracker.view.BadgeView
                                android:id="@+id/badgeMSG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textSize="12dp"
                                android:gravity="center"
                                />
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/babyGroupLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                >

            <ImageView
                    android:id="@+id/babyGroupIV"
                    style="@style/BottomTabButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baby_group_uncheck"/>
            <TextView
                    android:id="@+id/babyGroupTV"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/mainBarText"
                      android:text="@string/main_bbg"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/nearbyLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone"
                >

            <ImageView
                    android:id="@+id/nearbyIV"
                    style="@style/BottomTabButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nearby_unckecked"/>
            <TextView
                    android:id="@+id/nearbyTV"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/mainBarText"
                      android:text="@string/main_near"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/myLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                >

            <ImageView
                    android:id="@+id/myIV"
                    style="@style/BottomTabButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/man_unchecked"/>
            <TextView
                    android:id="@+id/myTV"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/mainBarText"
                      android:text="@string/main_my"
                    />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>