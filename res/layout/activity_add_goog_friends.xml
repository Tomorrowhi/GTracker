<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:visibility="gone"
            >
        <com.bct.gpstracker.view.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cim_heading"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_no_photo"
                app:border_color="#00b5e9"
                app:border_width="2dp"
                />
        <ImageButton
                android:id="@+id/imb_select_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="@null"
                android:src="@drawable/device_photo"/>
    </FrameLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/ui_item_white_bottom"
            >
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/ui_item_white_bottom"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/friends_relationship"
                    android:textSize="@dimen/account_item_title_textsize"

                    />
            <Spinner
                    android:id="@+id/friends_relationship_spi"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:layout_height="fill_parent"
                    android:background="@null"

                    />
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/ui_item_white_bottom"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/friends_name"
                    android:textSize="@dimen/account_item_title_textsize"
                    />
            <EditText
                    android:id="@+id/friends_name_et"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="fill_parent"
                    android:textSize="@dimen/account_item_content_size"
                    android:background="@null"

                    />
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/ui_item_white_bottom"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/friends_phone"
                    android:textSize="@dimen/account_item_title_textsize"
                    />
            <EditText
                    android:id="@+id/friends_phone_et"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="fill_parent"
                    android:textSize="@dimen/account_item_content_size"
                    android:background="@null"
                    android:hint="@string/friends_phone_hint"
                    android:textColorHint="@color/comm_gray_3"
                    />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>