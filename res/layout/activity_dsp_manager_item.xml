<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/ui_msg_list_item_bottom"
        >
    <TextView
            android:id="@+id/music_serial"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="01"
            android:textSize="14dp"
            android:gravity="center"
            android:paddingRight="10dp"
            />
    <TextView
            android:id="@+id/music_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|left"
            android:layout_toRightOf="@+id/music_serial"
            android:singleLine="true"
            android:textColor="#1f1f1f"
            android:textSize="18sp"/>
    <TextView
            android:id="@+id/music_singer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/more_menu"
            android:singleLine="true"
            android:textSize="12dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:visibility="visible"
            />
    <TextView
            android:id="@+id/music_downloading"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/more_menu"
            android:singleLine="true"
            android:textSize="12dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/springgreen"
            android:visibility="gone"
            />
    <LinearLayout
            android:id="@+id/playing"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/more_menu"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:visibility="gone"
            >
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/lb"
                />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/more_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_nextbtn"
                android:layout_gravity="center"
                />
    </LinearLayout>
</RelativeLayout>