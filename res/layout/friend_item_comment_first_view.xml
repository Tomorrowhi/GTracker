<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
        >
    <!--一级评论-->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/baby_listview_item_comment_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:text="评论用户"
                android:textColor="@color/dodgerblue"/>

        <TextView
                android:id="@+id/baby_listview_item_comment_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:text="评论内容"
                android:textColor="#383630"
                android:layout_toRightOf="@+id/baby_listview_item_comment_tv_username"/>
        <TextView
                android:id="@+id/baby_listview_item_comment_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="评论时间"
                android:textColor="#bcbcbc"
                android:layout_toRightOf="@+id/baby_listview_item_comment_tv_content"/>
        <Button
                android:id="@+id/baby_listview_item_comment_bt_delete"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@color/transparent"
                android:textColor="@color/darkblue"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:textSize="15sp"
                android:text="删除"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/baby_listview_item_comment_tv_time"
                android:layout_marginLeft="15dp"
                />
    </RelativeLayout>
    <!--二级评论-->
    <LinearLayout
            android:id="@+id/baby_listview_comment_ll_second"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
        <ListView
                android:id="@+id/baby_listview_comment_listview_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@null"
                >

        </ListView>
    </LinearLayout>
</LinearLayout>