<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >
    <!--头-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bg"
            android:orientation="horizontal"
            android:id="@+id/comment_file_heard">
        <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_back2"/>

        <TextView
                android:id="@+id/dividerView"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/backBtn"
                android:background="@color/deepskyblue"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baby_group_comment_message"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text"/>
        />
        <ImageButton
                android:id="@+id/comment_file_delete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:visibility="gone"
                android:src="@drawable/collect_icon_delete"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:padding="2dp"
                android:background="@color/transparent"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>
    <!--主体内容-->
    <ListView
            android:id="@+id/baby_group_comment_lv_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/baby_group_comment_layout_bottom"
            android:background="@color/transparent"
            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:dividerHeight="0dip"
            android:fadingEdge="none"
            android:fastScrollEnabled="true"
            android:focusable="true"
            android:listSelector="@drawable/list_selector_transition"
            android:layout_below="@+id/comment_file_heard"/>
    <!--评论框-->
    <LinearLayout
            android:id="@+id/baby_group_comment_layout_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/skyblue"
            android:orientation="vertical">

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/skyblue"/>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip">

            <Button
                    android:id="@+id/baby_group_comment_btn_send"
                    android:layout_width="60dip"
                    android:layout_height="46dip"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_chatbtn3"
                    android:text="评论"
                    android:textColor="@color/white"/>

            <EditText
                    android:id="@+id/baby_group_comment_eet_editer"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="3dip"
                    android:layout_toLeftOf="@+id/baby_group_comment_btn_send"
                    android:background="@drawable/edittext_sendmsg"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:gravity="left|center"
                    android:maxLength="120"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>